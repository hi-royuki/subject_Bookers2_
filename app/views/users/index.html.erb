<div class="container px-5 px-sm-0">
 <div class="row">
 <div class="col-md-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %> 
    <!--プロフィール画像-->
    <table>
        <tbody>
            <tr></tr>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th> <!--<th>ここにユーザーネーム</th>-->
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <%= link_to " ", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %><!--ここにユーザ編集機能-->
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title,  class:"form-control", id:"book_title"%>
    </div>
    <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body,  class:"form-control", id:"book_body"%>
    </div>
    <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
    </div>
 </div>
 
 
    <div class="col-md-8 offset-md-1">
         <h2>Users</h2>
         <table class="table">
             <thead>
                 <th>image</th>
                 <th>name</th>
                 <th colspan="3"> </th>
             </thead>
             <% @users.each do |f| %>
             <tr>
                 <td><%= attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                 <td><%= f.name %></td>
                 <td><%=link_to "Show", user_path(f.id) %></td>
                 <% end %>
                 </tr>
         </table>
     </div>
     </div>
    </div>  